type IHello is interface () // Interface for Hello component
type foo is interface( )	// Interface for the array component

// Hello World component
component Hello presents IHello {
	count = 1
	msg = ""

	constructor() { }
		
	constructor(string mesg) {
	   msg := mesg
	}
		
	behaviour {
		printString("\nHello ")
		printInt(count)
		count := count + 1
	}
} 

// Component with string passed as an argument
component Hello2 presents IHello {
	msg = ""

	constructor() {	}
		
	constructor(string mesg) {
	   msg := mesg
	}
		
	behaviour {
		printString("\nHello with a string passed: ")
		printString(msg)
	}
}

// Print array
proc printArray(integer[] a){
	printString("\nArray: ")
	for i = 0 .. a.length-1 do {
		printInt(a[i])
		printString(" ")
	}
}

// Component which prints an array of integers
component TestArray presents foo {
	a = new integer[5] of 0
	
	constructor() {
		for i = 0 .. a.length-1 do {
			a[i] := i
		}
	}
	
	behaviour {
		printArray(a)
	}
} 

// Create and test components
hello = new Hello()
hello2 = new Hello2("String passed")
testArray = new TestArray()